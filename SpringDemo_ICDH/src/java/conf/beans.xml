<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
">

    <bean id="CustomerBean" class="com.wt.entity.Customer">
        
        <property name="accountName">
            <value>John Phlip</value>
        </property>
        <property name="firstName">
            <value>John</value>
        </property>
        <property name="middleName">
            <value>K</value>
        </property>
        <property name="lastName">
            <value>Phlip</value>
        </property>
        <property name="dateOfBirth">
            <value>13</value>
        </property>
        <property name="monthOfBirth">
            <value>09</value>
        </property>
        <property name="yearOfBirth">
            <value>1975</value>
        </property>
        <property name="motherName">
            <value>Kathy</value>
        </property>
        <property name="emailID">
            <value>John666@qq.com</value>
        </property>
    
    </bean>
    
    <bean id="AccountBean" class="com.wt.entity.Account">
        
        <constructor-arg value="ICDH0001001010"/>
        <constructor-arg value="23/08/2010"/>
        <constructor-arg value="10000"/>
        <constructor-arg value="Savings"/>
        
    </bean>
    
    <bean id="FundTransferTransactionBean" class="com.wt.entity.FundTranFer">
        
        <constructor-arg value="10000"/>
        
    </bean>
    
</beans>
